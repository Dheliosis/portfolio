{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["next/core-web-vitals", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "never"],
		"quotes": ["error", "double"],
		"no-plusplus": "off",
		"max-len": ["warn", { "ignoreComments": true, "code": 120 }],
		"indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"arrow-parens": ["error", "as-needed"],
		"no-param-reassign": "off"
	}
}
